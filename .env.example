# Google Cloud Configuration
# Copy this file to .env and update with your actual values

# Google Cloud Project ID (string, not the numeric project number)
GOOGLE_CLOUD_PROJECT=loxation-f8e1c

# Google Cloud Project Number (numeric, for specific APIs that require it)
GOOGLE_CLOUD_PROJECT_NUMBER=696735170560

# Environment
NODE_ENV=production

# Optional: Service Account Key Path (if not using default credentials)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# MLS Gateway Configuration
MLS_GATEWAY_ENABLED=true
MLS_GATEWAY_MESSAGE_ARCHIVE_ENABLED=true
MLS_GATEWAY_MESSAGE_ARCHIVE_TTL_DAYS=30

# Metrics and Observability
METRICS_ENABLED=true
METRICS_AUTH_KEY=replace_with_secure_metrics_key